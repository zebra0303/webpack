root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
tab_width = 4

[*.scss]
indent_size = 2
tab_width = 2

[{*.js,*.ts,*.jsx}]
indent_size = 2
tab_width = 2

[{*.php,*.inc,*.htm,*.html}]
indent_size = 2
tab_width = 2

[{*.json,.babelrc,.eslintrc,composer.lock,jest.config}]
indent_size = 2

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false
